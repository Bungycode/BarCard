<div class="recipe-form container-fluid d-flex flex-column align-items-center">
  <h6>Submit New Drink Recipe Here</h6>
  <label for="drink">Drink Name: </label>
  <input id="drink" type="text" /><br />
  <div class="d-flex mb-2">
  <label for="liquid" class="mixing-liquid">Mixing Liquids </label><br />
  </div>
  <div class="d-flex flex-column new-recipe-liquid">
    {{#each liquids as |liquid|}}
      <label for="liquid_{{liquid.id}}"><input
          type="checkbox"
          class="liquid-list barcard-checkbox"
          id="{{liquid.id}}"
          name="liquid_{{liquid.id}}"
          value="{{liquid.name}}"
        />{{liquid.name}}</label><br />
    {{/each}}
    <a href="/newingredient">Need another liquid?</a><br />
  </div>
  
  {{! <button type="button" class="btn btn-primary" id="add-ingredients-button">Add Ingredients</button> }}
  <label for="is_alcoholic">Contains alcohol? </label>
  <input
    type="checkbox"
    id="is_alcoholic"
    class="barcard-checkbox"
    name="is_alcoholic"
    value="is_alcoholic"
  /><br />
  <label for="drink_instructions">Recipe Instructions: </label>
  <textarea id="drink_instructions"></textarea>
  <button
    type="button"
    class="btn btn-primary"
    id="new-recipe-button"
  >Submit</button>
</div>
<script src="/js/drink.js"></script>