<div class="container barCard-body-box vh-100">
  {{!-- <label for="text" class="text-white">Search:</label>
  <input type="text" id="text" class="text">
  <button class="search">Search Recipe</button> --}}
  <h3 class="text-white text-center m-3">Currently submitted recipes: </h3>
  {{#each recipes as |drink|}}
  <div class="row m-3 new-recipe-cards-container">
    <div class="card">
      <a href="/recipe/{{drink.id}}" class="card-header drink {{#if drink.is_alcoholic}}bg-success text-white{{else}}text-black{{/if}}">{{drink.drink_name}} {{#if drink.is_alcoholic}}CONTAINS ALCOHOL{{/if}} -  {{lookup ../emoticons @index}}</a>
      <div class="card-body text-black">
        {{drink.instructions}}
      </div>
      <div class="card-footer text-muted">
        Posted by {{user.username}} on {{format_date createdAt}}
      </div>
    </div>
  </div>
  {{/each}}
